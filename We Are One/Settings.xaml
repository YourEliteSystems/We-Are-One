<Window x:Class="We_Are_One.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:We_Are_One"
        mc:Ignorable="d"
        Title="Settings" Height="250" Width="450">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="227*"/>
            <ColumnDefinition Width="107*"/>
            <ColumnDefinition Width="92*"/>
            <ColumnDefinition Width="17*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="155*"/>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="34*"/>
        </Grid.RowDefinitions>
        <CheckBox x:Name="chk1" Content="LautStärkewert Speichern" Grid.Column="1" Margin="0,3,0,9" Grid.Row="1" Grid.ColumnSpan="2"/>
        <Button Content="Speichern" Grid.Column="1" Margin="4,0,0,0" Grid.Row="2" Height="Auto" RenderTransformOrigin="0.517,-0.121" Click="Button_Click"/>
        <Button Content="Button" Grid.Column="2" Margin="7,0,10,0" Grid.Row="2" Height="Auto" RenderTransformOrigin="0.517,-0.121"/>

    </Grid>
</Window>
